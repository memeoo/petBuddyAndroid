<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b8860b"
    tools:context="project.pb.petbuddy.fragment.DrawerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/member2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNickNameProfile"
                    android:textSize="16dp"
                    android:layout_marginBottom="9dp"
                    android:text="펫사랑이" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:id="@+id/tvGuestHost"
                    android:layout_marginBottom="9dp"
                    android:text="Guest" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Point: " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="5000" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="돌봄 요청 내역"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:id="@+id/tvCaringHistory"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="관심 섬김이"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:id="@+id/tvInterestingCarers"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:text="돌봄이 되기"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:id="@+id/tvTobeCarer" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그 아웃"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:id="@+id/tvLogout"
                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
